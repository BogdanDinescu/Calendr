<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_grey">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <com.applandeo.materialcalendarview.CalendarView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/calendarView"
                app:pagesColor="@color/black"
                app:headerColor="@color/blue_300"
                app:daysLabelsColor="@color/white"
                app:disabledDaysLabelsColor="@color/grey"
                app:abbreviationsBarColor="@color/blue_300"
                app:abbreviationsLabelsColor="@color/white"
                app:todayLabelColor="@color/orange"
                app:anotherMonthsDaysLabelsColor="@color/grey"
                app:highlightedDaysLabelsColor="@color/orange"
                app:headerLabelColor="@color/white"
        />

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_list"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />
        <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/add_button"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                android:layout_margin="2dp"
                android:background="@drawable/add_circle"
        />
</LinearLayout>
</ScrollView>