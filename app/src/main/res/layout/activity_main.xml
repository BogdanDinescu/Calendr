<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <com.applandeo.materialcalendarview.CalendarView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/calendarView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:pagesColor="@color/black"
                app:headerColor="@color/blue_300"
                app:daysLabelsColor="@color/white"
                app:disabledDaysLabelsColor="@color/grey"
                app:abbreviationsBarColor="@color/blue_300"
                app:abbreviationsLabelsColor="@color/white"
                app:selectionColor="@color/orange"
                app:todayLabelColor="@color/orange"
                app:anotherMonthsDaysLabelsColor="@color/grey"
                app:selectionLabelColor="@color/orange"
                app:highlightedDaysLabelsColor="@color/orange"
                app:headerLabelColor="@color/white"
        />

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/calendarView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/event_list"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />
</androidx.constraintlayout.widget.ConstraintLayout>