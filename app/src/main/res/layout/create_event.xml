<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:padding="30dp">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/event_name"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:hint="@string/name"
    />
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/in_date"
            android:hint="@string/date1"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            app:layout_constraintTop_toBottomOf="@id/event_name"
            app:layout_constraintStart_toStartOf="parent"
    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_date"
            android:id="@+id/btn_date1"
            app:layout_constraintTop_toBottomOf="@id/event_name"
            app:layout_constraintStart_toEndOf="@id/in_date"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/end_date"
            android:hint="@string/date2"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            app:layout_constraintTop_toBottomOf="@id/in_date"
            app:layout_constraintStart_toStartOf="parent"
    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_date"
            android:id="@+id/btn_date2"
            app:layout_constraintTop_toBottomOf="@id/btn_date1"
            app:layout_constraintStart_toEndOf="@id/end_date"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:id="@+id/cancel_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create2"
            android:id="@+id/ok_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />


</androidx.constraintlayout.widget.ConstraintLayout>