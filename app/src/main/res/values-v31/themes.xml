<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calendr" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/system_accent1_300</item>
        <item name="colorPrimaryVariant">@android:color/system_accent1_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/system_accent1_300</item>
        <item name="colorSecondaryVariant">@android:color/system_accent1_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/black</item>
        <!-- Action bar style. -->
        <item name="actionBarStyle">@style/ActionBarTheme</item>
    </style>
    <style name="Theme.Launcher" parent="Theme.Calendr">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>
    <style name="ActionBarTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>
</resources>